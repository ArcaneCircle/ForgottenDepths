{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "noImplicitAny": true,
    "noEmit": true,
    "watch": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "typeRoots": ["../node_modules/@types"],
    "types": []
  },
  "exclude": ["node_modules", "node_modules/**/*"],
  "include": ["./src/ts/**/*.ts"]
}
